{
  "name": "doordash-tracker",
  "version": "1.0.0",
  "description": "A desktop app for tracking DoorDash delivery profits and metrics",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "server": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm start\" \"wait-on http://localhost:3000 && wait-on http://localhost:12001 && electron .\"",
    "dev:web": "concurrently \"npm run server\" \"npm start\"",
    "dev:server": "node server/index.js",
    "dev:easy": "node start-dev.js",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "electron-is-dev": "^3.0.1",
    "express": "4.18.2",
    "framer-motion": "^10.12.4",
    "helmet": "^6.1.5",
    "joi": "^17.9.1",
    "lucide-react": "^0.220.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-hot-toast": "^2.4.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.5.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^7.6.0",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "jest": "^27.5.1",
    "supertest": "^6.3.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.doordashtracker.app",
    "productName": "DoorDash Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "server/**/*",
      "node_modules/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
